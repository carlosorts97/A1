ataca.php
<?php
session_start();
echo"El atacante ha hecho ".$_SESSION['atacar']." puntos";
echo'<br>';
echo'<img src=img/'.$_SESSION['atacar'].'.png width=150px/>';
if($_POST){
  $_SESSION['defender']=rand(1,6);
  header('Location:defensa.php');
}

?>


<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <form action="<? $_SERVER['PHP_SELF']; ?>" method="post">
    <p><input type="submit" value="DEFENSA" name="Sign up"></p>
  </body>
</html>
