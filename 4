defensa.php
<?php
session_start();
echo"El atacante ha sacado ".$_SESSION['atacar']." puntos";
echo'<br>';
echo'<img src=img/'.$_SESSION['atacar'].'.png width=150px/>';
echo'<br>';
echo"El defesor ha sacado ".$_SESSION['defender']." puntos";
echo'<br>';
echo'<img src=img/'.$_SESSION['defender'].'.png width=150px/>';
$jugada=0;
if($_SESSION['atacar'] > $_SESSION['defender'])
{
  $jugada=$_SESSION['atacar']-$_SESSION['defender'];
  echo'<br>';
  echo '<h1>Gana el atacante '.$jugada.' puntos</h1>';
}
elseif ($_SESSION['atacar'] < $_SESSION['defender']) {
  $jugada=$_SESSION['defender']-$_SESSION['atacar'];
  echo'<br>';
  echo '<h1>Gana el defensor '.$jugada.' puntos</h1>';
}
else{
  echo'<h1>Empate</h1>';
}
?>
